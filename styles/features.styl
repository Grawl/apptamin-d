ul
    &.features
        list-style-type: none
        margin: 0px
        clear: both
        & > li
            clear: both
            display: block
            padding-top: 30px
            width: 100%
        li
            &.imgright
                background-position: 0px 20px
                .imgwrap
                    background-position: 0px 20px
            .imgwrap
                width: 960px
                margin: 0 auto
                height: 510px
                position: relative
.imgleft
    .features-img
        float: left
        margin-right: 20px
    .features-txt
        float: right
.imgright
    .features-img
        float: right
        margin-left: 20px
    .feature
        position: relative
        left: 640px
.imgleft h3,.imgleft h4
    clear: none
    float: left
    margin-left: 20px
.imgright h3,.imgright h4
    clear: none
    float: left
    margin-left: 30px
.feature
    position: relative
    left: 0px
    height: 400px
    float: left
    .imac
        position: absolute
        background: url(images/device_imac_front.png)
        background-repeat: no-repeat
        width: $desktop-width
        height: 365px
        z-index: 3
        left: 0
        &.back
            background: url(images/device_imac_back.png)
            background-repeat: no-repeat
            top: 50px
            left: 0px
            display: block
            width: 180px
            height: 409px
            z-index: 2
            img
                margin-left: 15px
                margin-top: 62px
                width: 152px
                height: 228px
        img
            position: absolute
            &.screenshot
                left: 18px
                top: 17px
                width: 415px
                height: 235px
                z-index: 9
        .glare
            position: absolute
            background: url(images/glare_imac.png)
            background-repeat: no-repeat
            width: 77px
            height: 203px
            left: 128px
            top: 75px
            z-index: 10
