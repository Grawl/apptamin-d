        z-index: 3
        left: 60px
        top: 15px
        img
            &.screenshot
                margin-left: 56px
                margin-top: 55px
                width: 186px
                height: 310px
                z-index: 9
        .glare
            position: absolute
            background: url(images/glare_androidS2.png)
