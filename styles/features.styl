.feature.single-desktop
	.back
		&.imac,
		&.iphone5,
		&.androidS2,
		&.androidS3
		    display: none
	.iphone5
	    left: 40px
	.androidS2,
	.androidS3
	    left: 5px
.imgright
	.feature
		.imac,
		.iphone5
		    left: 0px
		 .androidS2,
		 .androidS3
		    left: -30px
		.imac.back,
		.iphone5.back
		    left: 138px
		.androidS2.back,
		.androidS3.back
		    left: 100px
		&.single-desktop
			.imac,
			.iphone5
		    	left: 40px
		&.single-desktop
			.androidS2,
			.androidS3
		  	  left: 5px
